<!--TODO(2) Replace ListView with RecyclerView (https://traversoft.com/blog/2016/01/31/replace-listview-with-recyclerview/)-->
<RelativeLayout
    android:id="@+id/relative_layout_activity_add_collectable"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDarkBackground">

    <include
        layout="@layout/toolbar_actionbar"
        android:id="@+id/activity_collectable_toolbar"/>

    <ListView
        android:id="@+id/activity_collectable_listview"
        android:layout_below="@id/activity_collectable_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorDarkBackground"
        android:dividerHeight="0dp"/>

</RelativeLayout>