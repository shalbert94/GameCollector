<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_item_description"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft = "16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/collectable_image"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        tools:src="@drawable/goldeneye" />

    <TextView
        android:id="@+id/collectable_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/collectable_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        tools:text="007 Goldeneye"/>

    <TextView
        android:id="@+id/collectable_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/collectable_title"
        android:layout_toRightOf="@id/collectable_image"
        android:layout_marginLeft="16dp"
        tools:text="Nintento 64"/>

    <TextView
        android:id="@+id/collectable_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        tools:text="$15.08"/>

</RelativeLayout>