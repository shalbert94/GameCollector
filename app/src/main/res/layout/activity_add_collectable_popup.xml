<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_add_collectable_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/popup_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_question"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/decline_addition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decline_addition"
        android:layout_below="@id/popup_question"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/confirm_addition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_addition"
        android:layout_below="@id/popup_question"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"/>

</RelativeLayout>