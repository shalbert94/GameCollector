<?xml version="1.0" encoding="utf-8"?>
<!--List item layout activity_collectable.xml's ListView-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_collectable_relative_layout_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="16dp"
    android:background="@color/colorDarkBackground"
    android:orientation="vertical">

    <!--Displays collectable's console's logo-->
    <ImageView
        android:id="@+id/activity_collectable_image_console_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:src="@drawable/nintendo_64_logo" />

    <!--Displays collectable's title-->
    <com.example.android.gamecollector.customviews.CustomTextView
        xmlns:roboto="http://schemas.android.com/apk/com.example.customviews.CustomTextView"
        android:id="@+id/activity_collectable_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/activity_collectable_image_console_logo"
        android:textSize="16sp"
        roboto:typeface="roboto_bold.ttf"
        tools:text="Super Mario 64" />

    <!--Displays how copies of the collectable the user owns-->
    <com.example.android.gamecollector.customviews.CustomTextView
        xmlns:roboto="http://schemas.android.com/apk/com.example.customviews.CustomTextView"
        android:id="@+id/activity_collectable_text_copies_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/activity_collectable_image_console_logo"
        android:layout_below="@id/activity_collectable_text_title"
        android:textSize="14sp"
        roboto:typeface="roboto_bold.ttf"
        tools:text="1 Owned"/>

</RelativeLayout>