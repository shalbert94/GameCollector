<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shalbert.hobby.gamecollector">

    <!--Theme changed to "NoActionBar" for using Toolbar as ActionBar-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_game_collector_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_game_collector_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".AddCollectableSearchResultsActivity" />

        <activity
            android:name="com.shalbert.hobby.gamecollector.activities.AuthenticationActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <!--SoftInput="adjustPan" ensures keyboard doesn't cover EditText-->
        <activity
            android:name="com.shalbert.hobby.gamecollector.activities.CollectionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <!--SoftInput="adjustPan" ensures keyboard doesn't cover EditText-->
        <activity
            android:name="com.shalbert.hobby.gamecollector.activities.CollectableActivity"
            android:label="Add to collection"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:parentActivityName="com.shalbert.hobby.gamecollector.activities.CollectionActivity"
            android:windowSoftInputMode="adjustPan">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <provider
            android:name="com.shalbert.hobby.gamecollector.data.sqlite.CollectableProvider"
            android:authorities="com.shalbert.hobby.gamecollector"
            android:exported="false"/>
    </application>

</manifest>